@page
@model BerrasBioLab.Pages.Showcases.FrontPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Showcase</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Showcase.MovieId" class="control-label"></label>
                <select asp-for="Showcase.MovieId" class ="form-control" asp-items="ViewBag.MovieId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Showcase.SalonId" class="control-label"></label>
                <select asp-for="Showcase.SalonId" class ="form-control" asp-items="ViewBag.SalonId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Showcase.AvailableSeats" class="control-label"></label>
                <input asp-for="Showcase.AvailableSeats" class="form-control" />
                <span asp-validation-for="Showcase.AvailableSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Showcase.StartTime" class="control-label"></label>
                <input asp-for="Showcase.StartTime" class="form-control" />
                <span asp-validation-for="Showcase.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
