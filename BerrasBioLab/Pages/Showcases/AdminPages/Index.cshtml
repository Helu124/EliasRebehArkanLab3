@page
@model BerrasBioLab.Pages.Showcases.AdminPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Admin</h2>

<p>
    <a class="btn btn-primary mt-1" a asp-page="Create">Display Movie</a>
</p>
<p>
    <a class="btn btn-primary mt-1" asp-area="" asp-page="/Showcases/Movies/Create">New Movie</a>
</p>
<p>
    <a class="btn btn-primary mt-1" asp-area="" asp-page="/Customers/Orders/Index">Show and Edit Customers</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Showcase[0].Movie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Showcase[0].Salon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Showcase[0].AvailableSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Showcase[0].StartTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Showcase)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Movie.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salon.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableSeats)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
